#!/bin/bash

lvl=0

if [ -e .git ]; then
	git "$@"
	lvl=$?
else
	resultText=
	gitdirs="$(echo */.git)"
	if [ "${gitdirs}" = "*/.git" ]; then
		echo "no .git in $PWD or direct subdirs"
		lvl=3
	else
		for dg in */.git; do
			export d="$(dirname "$dg")"
			echo $d
			statusText=
			if [ ! -d "$d" ]; then
				echo "$d" is no directory
				lvl=3
				statusText=missing
			else
				exec 5>&1
				output="$(
					set -e
					cd "$d"
					git "$@" | tee >(cat - >&5)
					exit ${PIPESTATUS[0]}
				)"
				lvll=$?
				lastLine=$(echo "$output" | tail -n 1)
				statusText="$(echo "$lastLine" | cut -d "[" -f 2 | cut -d "]" -f 1)"
				if [ "$statusText" = "$lastLine" ]; then
					statusText=
				fi
				if [ $lvl -eq 0 ]; then
					lvl=$lvll
					if [ "$statusText" = "" ]; then
						statusText=ok
					fi
				elif [ "$statusText" = "" ]; then
					statusText=failed
				fi
			fi
			resultText="$resultText
$d $statusText"
			echo
		done
	fi
	echo "$resultText"
fi

if [ $lvl -eq 0 ]; then
	echo "git all [ok]"
else
	echo "git all [failed]"
fi

